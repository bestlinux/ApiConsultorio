FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app/ApiConsultorio
COPY . .
RUN dotnet restore "ApiConsultorio.sln"

# copy csproj and restore as distinct layers
COPY . .
RUN dotnet build "ApiConsultorio.sln"  -c Release -o /app/ApiConsultorio/out

FROM build AS publish
RUN dotnet publish -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app

COPY --from=build /app/ApiConsultorio/out ./
ENTRYPOINT ["dotnet", "ApiConsultorio.WebApi.dll"]

EXPOSE 8080
EXPOSE 8081